@{
    ViewData["Title"] = "Edit Learner";
    Layout = "~/Views/Shared/_MainLayoutHelper.cshtml";
}
@model Learner
<div class="d-flex d-flex flex-column">
    <h1>Cập nhật học viên</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="Learner" asp-action="Edit" asp-route-id="@Model.LearnerID" method="post" class="mt-3">
        <table class="table table-borderless w-75">
            <tbody>
                <tr>
                    <th class="col-sm-2 col-form-label text-end">
                        <label asp-for="FirstMidName"></label>
                    </th>
                    <td>
                        <input asp-for="FirstMidName" class="form-control" placeholder="Tên">
                        <span asp-validation-for="FirstMidName" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th class="col-sm-2 col-form-label text-end">
                        <label asp-for="LastName"></label>
                    </th>
                    <td>
                        <input asp-for="LastName" class="form-control" placeholder="Họ">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th class="col-sm-2 col-form-label text-end">
                        <label asp-for="MajorID"></label>
                    </th>
                    <td>
                        <select asp-for="MajorID" class="custom-select mr-sm-2"
                                asp-items="@ViewBag.MajorID"></select>
                        <span asp-validation-for="MajorID" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th class="col-sm-2 col-form-label text-end">
                        <label asp-for="EnrollmentDate"></label>
                    </th>
                    <td>
                        <input asp-for="EnrollmentDate" class="form-control">
                        <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th></th>
                    <td colspan="2">
                        <button type="submit" class="btn btn-primary">Xác nhận</button>
                    </td>
                </tr>
            </tbody>
        </table>
        <input type="hidden" asp-for="LearnerID" />
    </form>
</div>
